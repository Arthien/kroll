#!/usr/bin/env python
Import('build')

Env = build.env.Clone()
build.add_thirdparty(Env, 'poco')

if build.is_osx():
	Env.Append(LIBS=['kroll'])

Env.SharedLibrary(Env, build.dir + '/foomodule', Glob('*.cpp'))

m = build.add_module('foo')
t = Env.SharedLibrary(Env, m.build_dir + '/foomodule', Glob('*.cpp'))
build.require(t)
