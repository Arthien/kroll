#!/usr/bin/env python
import os, os.path as path

Import('build')

Env = build.env.Clone()
Env.Append(CPPPATH = ['#.'])
Env.Append(CPPDEFINES=('KROLL_API_API_EXPORT', 1))
build.add_thirdparty(Env, 'poco')

m = build.add_module('api')
t = Env.SharedLibrary(m.build_dir + '/apimodule', Glob('*.cpp'))
build.require(t)
